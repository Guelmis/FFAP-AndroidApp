<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#607D8B">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextResena"
        android:layout_marginTop="165dp"
        android:hint="Comentario"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBComment"
        android:layout_below="@+id/editTextResena"
        android:stepSize="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicar"
        android:id="@+id/btnpublicar"
        android:textSize="20sp"
        android:background="#D32F2F"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/ratingBComment"
        android:layout_alignStart="@+id/ratingBComment"
        android:layout_marginTop="38dp"
        android:layout_alignEnd="@+id/ratingBComment" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="81dp"
        android:layout_alignParentEnd="true"
        android:background="#FFFFFF"
        android:padding="15dp"
        android:phoneNumber="false"
        android:hint="TÃ­tulo" />

</RelativeLayout>
