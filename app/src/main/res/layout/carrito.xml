<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#607D8B">

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.learn2crack.CarritoActivity" >

        <TextView
            android:id="@+id/carrito_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 RD$"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/carrito_itbis" />

        <ListView
            android:id="@+id/listofprod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/carrito_pago" >

        </ListView>

    <Button
            android:id="@+id/carrito_pago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="Proceder al pago"
            android:textSize="14sp"
        android:background="#D32F2F"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/carrito_total" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Total: "
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/btnclear"
        android:layout_above="@+id/listofprod"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:background="#D32F2F"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ITBIS 18%:"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total:"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 RD$"
        android:id="@+id/carrito_total"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/carrito_itbis" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 RD$"
        android:id="@+id/carrito_itbis"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/carrito_total"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

