<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#607D8B">

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/inUsuario"
        android:hint="Usuario"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_above="@+id/lname"
        android:layout_alignStart="@+id/lname"
        android:layout_marginBottom="63dp"
        android:background="#FFFFFF"
        android:padding="10dp" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Contraseña"
        android:inputType="textPassword"

        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_above="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginBottom="54dp"
        android:background="#FFFFFF"
        android:padding="10dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Confirmar Contraseña"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/uname"
        android:padding="10dp"
        android:background="#FFFFFF" />


    <EditText
        android:id="@+id/uname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="#FFFFFF"
        android:padding="10dp" />

    <EditText
        android:id="@+id/pword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Confirmar correo"
        android:inputType="textEmailAddress|textPassword"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/uname"
        android:layout_alignBaseline="@+id/lname"
        android:layout_alignBottom="@+id/lname"
        android:layout_alignStart="@+id/lname" />


    <Button
        android:id="@+id/btnregister"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Registrar"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:layout_below="@+id/uname"
        android:layout_alignStart="@+id/uname"
        android:layout_marginTop="59dp"
        android:background="#D32F2F" />

</RelativeLayout>
